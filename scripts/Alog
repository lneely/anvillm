#!/usr/bin/env rc

# Alog - Stream AnviLLM audit log to Acme window

# Create window and get its ID
winid=`{9p read acme/new/ctl | awk '{print $1}'}
echo name /AnviLLM/Audit | 9p write acme/$winid/ctl
echo clean | 9p write acme/$winid/ctl

# Stream audit log to window
9p read agent/audit | 9p write acme/$winid/data

