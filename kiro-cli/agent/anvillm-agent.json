{
  "name": "anvillm-agent",
  "description": "Agent for AnviLLM multi-agent workflows with mailbox communication",
  "tools": ["*"],
  "allowedTools": ["*"],
  "includeMcpJson": true,
  "hooks": {
    "agentSpawn": [
      {
        "command": "cat ~/.kiro/SKILLS_PROMPT.md"
      }
    ],
    "userPromptSubmit": [
      {
        "command": "echo running | 9p write agent/$AGENT_ID/state 2>/dev/null || true"
      }
    ],
    "stop": [
      {
        "command": "echo idle | 9p write agent/$AGENT_ID/state 2>/dev/null || true"
      }
    ]
  }
}
